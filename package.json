{
  "name": "@ioak/basicui",
  "version": "0.1.0",
  "private": false,
  "description": "A versatile UI component library with built-in support for both dark and light modes. Users can easily customize components globally or locally, following a lightweight CSS framework aligned with HTML standards. It also provides multiple themes and a user-friendly color scheme generator.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioak-io/basicui.git"
  },
  "bugs": {
    "url": "https://basicui.ioak.io"
  },
  "homepage": "https://basicui.ioak.io",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/styles.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build:lib": "tsup",
    "build:css": "tailwindcss -i ./src/styles/index.css -o ./dist/styles.css --minify",
    "build:storybook": "storybook build",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:lib && npm run build:css",
    "lint": "echo 'add eslint config if desired'",
    "test": "echo 'add tests (vitest/jest) if desired'",
    "package": "npm run build && npm pack"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "storybook": "^8.6.14",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/cli": "^4.1.0",
    "@tailwindcss/vite": "^4.1.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^6.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "minify": true,
    "external": [
      "react",
      "react-dom"
    ]
  }
}
